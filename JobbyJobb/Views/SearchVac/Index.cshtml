    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .container {
            flex: 1;
        }

        .header, .footer {
            width: 100%;
            background-color: #007bff;
            color: white;
        }

            .header a, .footer p {
