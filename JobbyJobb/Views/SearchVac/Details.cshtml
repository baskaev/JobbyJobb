@model Vacancy;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Детали Вакансии - JobbyJobb.com</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .container {
            flex: 1;
        }

        .header, .footer {
            width: 100%;
            background-color: #007bff;
            color: white;
        }

            .header a, .footer p {
                margin: 0;
            }

        .header {
            padding: 1rem 0;
        }

            .header a {
                font-size: 2rem;
                font-weight: bold;
            }

            .header .nav-link {
                font-size: 0.875rem; /* Smaller font size */
            }

        .footer {
            text-align: center;
            padding: 1rem 0;
            background-color: #007bff;
            color: white;
        }

        .vacancy-details {
            max-width: 800px;
            margin: 3rem auto;
        }

            .vacancy-details h2 {
                margin-bottom: 1.5rem;
            }
    </style>
</head>
<body>

    <header class="header d-flex justify-content-between align-items-center py-3 mb-4 border-bottom">
        <div class="container d-flex justify-content-between align-items-center">
            <a href="#" class="text-white text-decoration-none">
                <span>JobbyJobb.com</span>
            </a>
            <ul class="nav nav-pills">
                <li class="nav-item"><a href="#" class="nav-link text-white">Статистика</a></li>
                <li class="nav-item"><a href="#" class="nav-link text-white">Услуги</a></li>
                <li class="nav-item"><a href="#" class="nav-link text-white">ВОЙТИ/Зарегистрироваться</a></li>
            </ul>
        </div>
    </header>

    <div class="container">
        <div class="vacancy-details">
            <h2>@Model.Name</h2>
            <p><strong>Описание:</strong></p>
            <p>@Model.Description</p>
            <h4>Комментарии:</h4>
            <ul class="list-group">
                @* @if(Model.Comments != null){ foreach(var com in Model.Comments){<li class="list-group-item">com.Text</li>} } *@
                @if (Model.Comments != null)
                {
                    foreach (var com in Model.Comments)
                    {
                        <li class="list-group-item">@com.Text</li>
                    }
                }

                @* <li class="list-group-item">Комментарий 1</li>
                <li class="list-group-item">Комментарий 2</li>
                <li class="list-group-item">Комментарий 3</li> *@
                <!-- Добавьте дополнительные комментарии здесь -->
            </ul>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <p>JobbyJobb inc. все права защищены</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

</body>
</html>
